}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-default" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country1)
        </th>
        <th></th>
    </tr>

